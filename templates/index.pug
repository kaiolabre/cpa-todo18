doctype html
html
  head
    title To do list
    link(href='styles/styles.css',rel='stylesheet')
    meta(name='viewport',content='width=device-width,initial-scale=1')
  body
    .app
      header
        img.logo(src='images/logo.png')
        h1 To do
      form#task-form
        input#task-input(type='text',placeholder='add a task')
        button#task-add(type='submit') Add
      main
        ul#task-list
          li Buy watermelons
          li Finish assignments
          li Get tomatoes
      footer
  script(src='./js/main.js')